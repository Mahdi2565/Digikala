<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="200dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative"
                android:background="#F9F9F9"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:id="@+id/title_address"
                    android:layout_marginEnd="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="@string/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_centerVertical="true"
                    android:id="@+id/delete_address"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/delete"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/full_name_customer"
                android:layout_margin="8dp"
                android:text="@string/last_name"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/customer_user_address"
                android:layout_margin="8dp"
                android:text="@string/last_name"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/full_name_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/customer_phone"
                android:layout_margin="8dp"
                android:text="@string/register_digikala"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/customer_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

