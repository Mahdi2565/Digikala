<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/productBackGroundColor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.fragment.SearchFragment">

    <androidx.cardview.widget.CardView
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:tint="@color/gray"
                android:padding="8dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_margin="8dp"
                android:id="@+id/back_search"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

            <EditText
                android:layout_toEndOf="@id/clear_edit_text"
                android:textDirection="rtl"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:id="@+id/search_edt"
                android:maxLines="1"
                android:background="@null"
                android:layout_toStartOf="@id/back_search"
                android:hint="@string/search_in_digikala"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:visibility="visible"
                android:padding="8dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_margin="8dp"
                android:id="@+id/voice_to_text_img"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_keyboard_voice_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"/>

            <ImageView
                android:visibility="gone"
                android:tint="@color/gray"
                android:padding="8dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_margin="8dp"
                android:id="@+id/clear_edit_text"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_clear_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>