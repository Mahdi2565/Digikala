<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="4dp"
    app:strokeColor="@color/strokeCardView"
    app:strokeWidth="0.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="230dp">

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/product_img_horizontal_recyclerView"
            android:src="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
            <TextView
                android:textColor="@color/titleProduct"
                android:id="@+id/title_product_horizontal_recyclerView"
                android:maxLines="2"
                android:gravity="end"
                android:layout_below="@+id/product_img_horizontal_recyclerView"
                android:text="@string/app_name"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/title_product_horizontal_recyclerView"
            android:id="@+id/seperator"
            android:src="@color/strokeCardView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/sale_price"
            android:layout_alignParentBottom="true"
            android:textColor="@color/priceColor"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="start"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>