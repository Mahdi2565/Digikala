<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:id="@+id/title_horizontal"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="@string/app_name"
        android:textColor="@color/grayRecyclerViewItem"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true" />
    <TextView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:textColor="@color/blueRecyclerViewItem"
        android:padding="16dp"
        android:text="@string/full_list"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_horizontal_recyclerView"
        android:layout_below="@id/title_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>